---
import * as CONTENT from "../pages/content"
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
import ContactCard from "./ContactCard.astro";
import ProjectsCard from "./ProjectsCard.astro";
---

<ul class="shadow-box">
  <AccordionLayout title={"About Me"} icon={"ion:person-circle"}>
    {CONTENT.about}
  </AccordionLayout>
    <AccordionLayout title={"Experience"} icon={"ion:briefcase"}>
      {
        CONTENT.work.map((item) => {
          return (
            <Card
              title={item.role}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={item.skills}
              url={item.org_url}
              url_name={item.org}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Projects"} icon={"ion:terminal"}>
      {
        CONTENT.projects.map((item) => {
          return (
            <ProjectsCard
              title={item.title}
              timeframe="2022-2023"
              description={item.description}
              tags={item.tech}
              url={item.url}
              url_name={"Open Project"}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Education"} icon={"ion:school"}>
      {
        CONTENT.education.map((item) => {
          return (
            <Card
              title={item.course}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={""}
              url={"#"}
              url_name={item.institute}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Certifications"} icon={"ion:ribbon"}>
      {
        CONTENT.certificates.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.issued}
              description={item.org}
              tags={item.description}
              url={item.url}
              url_name={"View Certificate"}
            />
          );
        })
      }
    </AccordionLayout>

    <!-- <AccordionLayout title={"Blogs/Writings"} icon={"ic:round-edit-note"}>
      {
        CONTENT.blogs.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.date}
              description={item.description}
              tags=""
              url={item.url}
              url_name={item.publisher}
            />
          );
        })
      }
    </AccordionLayout> -->

    <AccordionLayout title={"Extracurricular activities"} icon={"ion:accessibility"}>
      {
        CONTENT.extra.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.year}
              description={item.decription}
              tags=""
              url="#"
              url_name=""
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Contact"} icon={"ion:person-add"}>
      {
        CONTENT.contact.map((item) => {
          return (
            <ContactCard
              title={""}
              timeframe=""
              description=""
              tags=""
              url={item.source}
              url_name={item.source_name}
            />
          );
        })
      }
    </AccordionLayout>
</ul>
